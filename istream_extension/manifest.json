{
  "manifest_version": 2,
  "name": "iStream",
  "description": "Regroup all your favorite videos from all plateforms into one!",
  "version": "1",
  "author": "iStream",

  "browser_action": {
    "default_title": "iStream",
    "default_popup": "iStream_connection.html"
  },

  "background": {
    "scripts": [ "parse_video_url.js" ],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
